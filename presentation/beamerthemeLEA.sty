\ProvidesPackage{beamerthemeLEA}

\mode<presentation>
\definecolor{tumblue}{HTML}{0072BD}
\definecolor{tumdarkblue}{HTML}{004682}
\definecolor{tumwhite}{HTML}{F7F7F7}
\definecolor{tumlightgray}{HTML}{DEDEDE}
\definecolor{tumblack}{HTML}{666666}
\definecolor{leared}{HTML}{DC6E0F}

\beamertemplatelargetitlepage
\beamertemplatelargepartpage
\beamertemplatelargeframetitle
\beamertemplatelargeblocks
\beamertemplateplaintoc
\setbeamertemplate{theorem begin}[unnumbered]

\setbeamercolor{alerted text}{fg=leared}
\setbeamercolor*{palette primary}{fg=tumdarkblue,bg=tumwhite}
\setbeamercolor*{palette secondary}{fg=tumblue,bg=tumwhite}
\setbeamercolor*{palette tertiary}{fg=tumwhite,bg=tumdarkblue}
\setbeamercolor*{palette quaternary}{fg=tumblue,bg=tumwhite}

\setbeamercolor{footline}{fg=tumblack,bg=tumlightgray}
\setbeamercolor*{normal text}{fg=black,bg=tumwhite} % not according to corporate design; higher contrast necessary
\setbeamercolor{alerted text}{fg=leared}
\setbeamercolor{structure}{fg=tumblue}

\setbeamercolor{frametitle}{bg=tumwhite}
\setbeamercolor{frametitle right}{bg=tumwhite}
\setbeamercolor{frametitle left}{fg=tumwhite,bg=leared}

\setbeamercolor{separation line}{bg=leared}

\useinnertheme{circles}
\useoutertheme{infolines}

\setbeamersize{text margin left=1em,text margin right=1em}

%                                 Headline
\defbeamertemplate*{headline}{ritscher theme}{%
	\hbox{%
		\begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,right]{section in head/foot}%
			\usebeamerfont{section in head/foot}\insertsectionhead\hspace*{2ex}%
		\end{beamercolorbox}%
		\begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,left]{subsection in head/foot}%
			\usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead%
		\end{beamercolorbox}%
	}\par%
	\begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}%
		\rule{0ex}{0.3ex}%
	\end{beamercolorbox}%
	\vskip0pt%
}

%                                Footline
\defbeamertemplate*{footline}{ritscher theme}{%
	\begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}%
		\rule{0ex}{0.3ex}%
	\end{beamercolorbox}%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.15ex,center]{footline}%
		\hbox to\paperwidth{\hskip3mm \insertshortauthor : \insertshorttitle \hfill \insertframenumber / \inserttotalframenumber \hskip1cm}%
    \end{beamercolorbox}%
	\begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}%
		\rule{0ex}{0.3ex}%
	\end{beamercolorbox}%
}
